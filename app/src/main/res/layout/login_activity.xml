<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/backgroundColor">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/view_corner_radius"
        />

    <TextView
        android:id="@+id/signintv"
        android:text="@string/sign_in"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="45sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:cardCornerRadius="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:background="@color/white"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">
            <TextView
                android:id="@+id/usernametv"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"/>

            <EditText
                android:id="@+id/usernameet"
                android:padding="10dp"
                android:hint="@string/enter_username"
                android:drawableStart="@drawable/username"
                android:drawablePadding="10dp"
                android:textColor="@color/black"
                android:layout_below="@id/usernametv"
                android:inputType="textEmailAddress"
                android:textColorHint="#9C9B9B"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/edit_text_ui"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/passwordtv"
                android:layout_below="@id/usernameet"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"/>

            <EditText
                android:id="@+id/passwordet"
                android:padding="10dp"
                android:drawableStart="@drawable/lock"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:layout_below="@id/passwordtv"
                android:drawableEnd="@drawable/see_password"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/edit_text_ui"
                android:inputType="textPassword"
                android:hint="@string/enter_password"
                android:textColorHint="#9C9B9B"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/forgetpasswordtv"
                android:layout_below="@id/passwordet"
                android:text="@string/forget_password"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/signinbtn"
                android:layout_below="@id/forgetpasswordtv"
                android:text="@string/sign_in"
                android:textAllCaps="true"
                android:background="@drawable/button_style"
                android:textSize="27sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/donthaveanaccounttv"
                android:layout_below="@id/signinbtn"
                android:text="@string/dont_have_an_account"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/signuptv"
                android:text="@string/sign_up"
                android:layout_below="@id/signinbtn"
                android:layout_alignEnd="@id/donthaveanaccounttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>