<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/backgroundColor">

    <TextView
        android:id="@+id/signuptv"
        android:text="signup"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        />



    <TextView
        android:id="@+id/usernametv"
        android:layout_below="@id/signuptv"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/usernameet"
        android:hint="Enter Username..."
        android:layout_below="@id/usernametv"
        android:inputType="textEmailAddress"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"/>



    <TextView
        android:id="@+id/usernametv"
        android:layout_below="@id/usernameet"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/usernameet"
        android:hint="Enter Email..."
        android:layout_below="@id/usernametv"
        android:inputType="textEmailAddress"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/passwordtv"
        android:layout_below="@id/usernameet"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/passwordet"
        android:layout_below="@id/passwordtv"
        android:textSize="18sp"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:hint="Enter Password..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/confirmpasswordtv"
        android:layout_below="@id/passwordet"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Confirm Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/confirmpasswordet"
        android:layout_below="@id/confirmpasswordtv"
        android:textSize="18sp"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/signupbtn"
        android:layout_below="@id/confirmpasswordet"
        android:text="sign up"
        android:textAllCaps="true"
        android:background="@drawable/button_style"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/alreadyhaveanaccounttv"
        android:layout_below="@id/signupbtn"
        android:text="Already Have An Account?"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/signintv"
        android:text="SignIn"
        android:layout_below="@id/signupbtn"
        android:layout_toEndOf="@id/alreadyhaveanaccounttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="15dp"/>


</RelativeLayout>