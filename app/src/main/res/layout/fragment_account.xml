<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/backgroundColor"
    tools:context=".fragments.AccountFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/view"/>

        <TextView
            android:id="@+id/myAccount"
            android:text="@string/my_account"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="140dp"
            android:textStyle="bold|normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/accountTv"
            android:text="Account"
            android:textStyle="bold|normal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/view"
            />


        <ImageView
            android:id="@+id/accountbackbtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
           android:layout_toStartOf="@id/accountTv"
            android:layout_below="@id/view"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/notificationTv"
            android:text="Notifications"
            android:textStyle="bold|normal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/accountTv"
            />


        <ImageView
            android:id="@+id/notificationbackbtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toStartOf="@id/notificationTv"
            android:layout_below="@id/accountbackbtn"
            android:layout_marginTop="25dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/privacyTv"
            android:text="Privacy"
            android:textStyle="bold|normal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="345dp"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/notificationTv"
            />

        <ImageView
            android:id="@+id/privacybackbtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="35dp"
            android:layout_toStartOf="@id/privacyTv"
            android:layout_below="@id/notificationbackbtn"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/supportTv"
            android:text="Help and Support"
            android:textStyle="bold|normal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/privacyTv"
            android:layout_alignParentEnd="true"
            />


        <ImageView
            android:id="@+id/supportbackbtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="25dp"
            android:layout_toStartOf="@id/supportTv"
           android:layout_below="@id/privacybackbtn"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/aboutTv"
            android:text="About"
            android:textStyle="bold|normal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/supportTv"
            android:layout_alignParentEnd="true"
            />

        <ImageView
            android:id="@+id/aboutbackbtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="25dp"
            android:layout_toStartOf="@id/aboutTv"
            android:layout_below="@id/supportbackbtn"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/logoutTv"
            android:text="Log Out"
            android:textStyle="bold|normal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/aboutTv"
            android:layout_alignParentEnd="true"
            />

        <ImageView
            android:id="@+id/logoutbackbtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="25dp"
            android:layout_toStartOf="@id/supportTv"
            android:layout_below="@id/aboutbackbtn"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</FrameLayout>